
{
  "rules": {
    "institutions": {
      ".read": "auth != null",
      "$institutionId": {
        ".write": "auth != null && (data.child('ownerId').val() === auth.uid || newData.child('ownerId').val() === auth.uid)",
        ".read": "auth != null", 
        "roles": {
          ".read": "auth != null"
        },
        "userMappings": {
          "$mappingId": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        }
      }
    },
    "userMappings": {
       ".read": "auth != null",
       "$mappingId": {
         ".write": "auth != null"
       }
    }
  }
}
